extends layout
block title
  h1
   a(href="/") NooliteF
   span &nbsp; / !{track} !{hex_answer}
block content
    table.cont(width="100%")
     tr
      td(valign="top")
       h2 Управление
       ul.dev
        li
         a(href = "/noolitef/cmd/#{str}/on?name=#{track}&chanel=#{chanel}") Включить
        li
         a(href = "/noolitef/cmd/#{str}/off?name=#{track}&chanel=#{chanel}") Выключить
        li
         a(href = "/noolitef/cmd/#{str}/switch?name=#{track}&chanel=#{chanel}") Переключить
        li
         a(href = "/noolitef/cmd/#{str}/dimmer?name=#{track}&chanel=#{chanel}") Димировать
      td(valign="top")
       h2 Настройки
       form.bord(action="/settings", method="post")
        ul.dev
         li
          span Тип выхода
          ul.dev
           li
            input(type="radio", name="out", value="rele")
            Реле
           li
            input(type="radio", name="out", value="rele_retranslation")
            Диммер
           li
            input(type="radio", name="out", value="rele_retranslation")
            Реле + ретранслятор Noolite
        ul.dev
         li
          span Состояние после подачи напряжения
          ul.dev
           li
            input(type="radio", name="state", value="off")
            Выключено
           li
            input(type="radio", name="state", value="on")
            Включено
           li
            input(type="radio", name="state", value="remember")
            Запоминание состояния
        ul.dev
         li
          span Выполнение команд временного включения
          ul.dev
           li
            input(type="radio", name="command", value="on")
            Разрешен (включен)
           li
            input(type="radio", name="command", value="off")
            Запрещен (выключен)
        ul.dev
         li
          span Вход внешнего упрвления
          ul.dev
           li
            input(type="radio", name="control", value="on")
            Не использовать
           li
            input(type="radio", name="control", value="off")
            Выключатель
           li
            input(type="radio", name="control", value="off")
            Кнопка
           li
            input(type="radio", name="control", value="off")
            Переключатель
        button.sender2(type="submit") Сохранить
       br(style="clear:both")
       form.bord(action="#")
         ul.dev
          li.tt
           span Уровни димирования
          li
           input.level(name="level_min", type="number", min=0, max=256, value=0)
           span.service Минимум
          li
           input.level(name="level_max", type="number", min=0, max=256, value=0)
           span.service Максимум
         button.sender2(type="submit") Сохранить
        br(style="clear:both")
       form.bord(action="#")
         ul.dev
          li.tt
           span Уровнень включения диммера
          li
           input.level(name="level_dimmer", type="number", min=0, max=256, value=0)
         button.sender2(type="submit") Сохранить
        br(style="clear:both")
       form.bord(action="#")
         ul.dev
          li.tt
           span Задержка ретрансляции Noolite
          li
           input.level(name="level_re", type="number", min=0, max=256, value=0)
         button.sender2(type="submit") Сохранить
      td(valign="top")
       h2 Информация
       ul.dev
        li
         a(href="/noolitef/info/#{str}/status?name=#{track}&chanel=#{chanel}") Состояние
        li
         a(href="/noolitef/info/#{str}/more?name=#{track}") Дополнительная информация
        li
         a(href="/noolitef/info/#{str}/memory?name=#{track}") Память устройства
        li
         a(href="/noolitef/info/#{str}/settings?name=#{track}") Настройки
        li
         a(href="/#{str}/info/dimer_levels?name=#{track}") Уровни димирования
         span.service минимум, максимум
        li
         a(href="/noolitef/info/#{str}/start_level?name=#{track}") Уровнень включения диммера
        li
         a(href="/noolitef/info/#{str}/retlanslator?name=#{track}") Задержка ретрансляции Noolite
       h2 Сервис
       ul.dev
        li
         a(href = "/bind/#{str}/unbind", target="_blank") Отвязать от MTRF
         span.service необходимо включить сервисный режим
        li
         a(href = "#", target="_blank") Очистить память от устройств Noolite
        li
         a(href = "/service/#{str}", target="_blank") Включить сервисный режим
        li
         a(href = "/service/#{str}/off", target="_blank") Выключить сервисный режим

